@{
    ViewBag.Title = "GetSwift Code Test - Alastair Pitts";
}

<nav class="navbar navbar-default">
    <div class="container">
        <a class="navbar-brand" href="/">GetSwift Code Test</a>
        <p class="navbar-text navbar-right">Alastair Pitts</p>
    </div>
</nav>

<div class="container" ng-controller="BookingController">
    <div class="row">
        <h1>Add Person</h1>
    </div>
    <div class="=row">
        <form>
            <div class="form-group">
                <label for="txtName">Name</label>
                <input type="text" class="form-control" id="txtName" placeholder="Name" value="{{newPerson.Name}}" />
            </div>
            <div class="form-group">
                <label for="txtPhone">Phone</label>
                <input type="text" class="form-control" id="txtPhone" placeholder="Phone" value="{{newPerson.Phone}}"/>
            </div>
            <div class="form-group">
                <label for="txtAddress">Address</label>
                <input type="text" class="form-control" id="txtAddress" placeholder="Address" value="{{newPerson.Address}}" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Add Person</button>
            </div>
            <div class="alert" ng-show="hasApiResult" ng-class="{'alert-danger': hasApiError, 'alert-success': !hasApiError}" role="alert">
                <strong>Result</strong>{{apiResult}}
            </div>
        </form>
    </div>
    <div class="row">
        <h1>Saved People</h1>
    </div>

    <div class="row personRow" ng-repeat="client in clientsList">
        <div class="col-md-4">
            <h3>{{client.Name}}</h3>
            <p>{{client.PrimaryPhone}}</p>
        </div>
        <div class="col-md-4">
            <h3>Pickup From</h3>
            <p>{{client.PickupAddress}}</p>
        </div>
        <div class="col-md-4">
            <h3>Delivery To</h3>
            <p>{{client.DeliveryAddress}}</p>
        </div>
    </div>
</div>